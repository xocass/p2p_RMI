<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="50.0" prefWidth="300.0" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p5.Client.controllers.CTemplateSolicitud">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="300.0" spacing="10.0" styleClass="light-hover">
         <children>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@user.png" />
               </image>
            </ImageView>
            <Label fx:id="nick" prefHeight="54.0" prefWidth="138.0" text="Label" textFill="WHITE" />
            <ImageView fitHeight="30.0" fitWidth="29.0" onMouseClicked="#aceptar" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@tick.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="36.0" fitWidth="33.0" onMouseClicked="#rechazar" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@x.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </children>
</AnchorPane>
